# =============================================================================
# Email Organizer AI - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# -----------------------------------------------------------------------------
# Gmail API Credentials (REQUIRED)
# -----------------------------------------------------------------------------
# For Codespaces/CI: Use GMAIL_CREDENTIALS_JSON with full JSON string
# Example: GMAIL_CREDENTIALS_JSON={"type":"authorized_user","client_id":"...","client_secret":"...","refresh_token":"..."}
GMAIL_CREDENTIALS_JSON=

# For local development: Alternatively use file path (legacy)
# GMAIL_CREDENTIALS_PATH=/path/to/your/credentials.json


# -----------------------------------------------------------------------------
# LLM Provider Selection
# -----------------------------------------------------------------------------
# Set to 'openai' (default) or 'gemini' to use Google Gemini
LLM_PROVIDER=openai

# -----------------------------------------------------------------------------
# OpenAI API Configuration (REQUIRED if using OpenAI)
# -----------------------------------------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=500

# -----------------------------------------------------------------------------
# Google Gemini API Configuration (REQUIRED if using Gemini)
# -----------------------------------------------------------------------------
# Get your API key from: https://makersuite.google.com/
GOOGLE_API_KEY=your_google_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# -----------------------------------------------------------------------------
# Email Processing Settings
# -----------------------------------------------------------------------------
# Maximum number of emails to process (leave empty for unlimited)
MAX_EMAILS_TO_PROCESS=

# Gmail query filter (uses Gmail search syntax)
# Examples: "is:unread", "from:example.com", "newer_than:7d"
EMAIL_QUERY=is:unread

# Auto-archive emails after processing (true/false)
AUTO_ARCHIVE=true

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Email Categories (comma-separated, no need for YAML format)
# These are used for AI categorization
EMAIL_CATEGORIES=Primary,Social,Promotions,Updates,Forums,Important,Work,Personal